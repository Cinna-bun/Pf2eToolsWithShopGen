{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "backgrounds.json",
	"title": "Backgrounds",
	"description": "The background data type for Pf2eTools.",
	"type": "object",
	"version": "0.0.1",
	"properties": {
		"background": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"source": {
						"type": "string",
						"$ref": "utils.json#/definitions/sourceList"
					},
					"page": {
						"type": "integer"
					},
					"entries": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						}
					},
					"boosts": {
						"type": "array",
						"items": {
							"type": "string",
							"anyOf": [
								{
									"$ref": "utils.json#/definitions/abilityUpper"
								}
							]
						},
						"minItems": 1,
						"uniqueItems": true
					},
					"skills": {
						"type": "array",
						"items": {
							"type": "string",
							"$ref": "utils.json#/definitions/skillNameUpper"
						},
						"minItems": 1,
						"uniqueItems": true
					},
					"lore": {
						"type": "array",
						"items": {
							"type": "string",
							"anyof": [
								{
									"$ref": "utils.json#/definitions/loreSubjects"
								},
								{
									"$ref": "utils.json#/definitions/classNameUpper"
								}
							]
							
						},
						"minItems": 1,
						"uniqueItems": true
					},
					"traits": {
						"type": "array",
						"items": {
							"type": "string",
							"$ref": "utils.json#/definitions/anyTraitUpper"
						},
						"minItems": 1,
						"uniqueItems": true
					},
					"feat": {
						"type": "array",
						"items": {
							"type": "string"
						},
						"minItems": 1,
						"uniqueItems": true
					},
					"ability":{
						"type": "boolean",
						"enum": [true]
					}
				},
				"additionalProperties": false,
				"required": [
					"name",
					"source",
					"entries"
				]
			},
			"uniqueItems": true
		}
	},
	"additionalProperties": false,
	"required": ["background"]
}