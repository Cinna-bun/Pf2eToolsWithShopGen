{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "fluff-organizations.json",
	"title": "Organization Fluff",
	"description": "The organizationFluff data type for Pf2eTools.",
	"type": "object",
	"version": "0.0.1",
	"properties": {
		"organizationFluff": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"source": {
						"type": "string",
						"$ref": "utils.json#/definitions/sourceList"
					},
					"name": {
						"type": "string"
					},
					"page": {
						"type": "integer"
					},
					"lore": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						}
					}
				},
				"additionalProperties": false,
				"required": ["source", "name", "page"]
			},
			"uniqueItems": true
		}
	},
	"additionalProperties": false,
	"required": ["organizationFluff"]
}